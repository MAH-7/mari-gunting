{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "../config/*": ["./config/*"],
      "../theme": ["./theme"],
      "../theme/*": ["./theme/*"],
      "../services/*": ["./services/*"],
      "../types/*": ["./types/*"],
      "../utils/*": ["./utils/*"],
      "../constants/*": ["./constants/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
